<mvc:View controllerName="jetCources.Project.controller.Worklist" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic"
	xmlns:smartTable="sap.ui.comp.smarttable" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:core="sap.ui.core">
	<semantic:SemanticPage id="page" headerPinnable="false" toggleHeaderOnTitleClick="false">
		<semantic:titleHeading>
			<Title text="{i18n>worklistTitle}"/>
		</semantic:titleHeading>
		<semantic:headerContent>
			<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="zjblessons_base_Materials" persistencyKey="pk_MaterialsST"
				 useToolbar="true" >
		<smartFilterBar:controlConfiguration>
				<smartFilterBar:ControlConfiguration >
				</smartFilterBar:ControlConfiguration>
				<smartFilterBar:ControlConfiguration key="Created" conditionType="{
						module: 'sap.ui.comp.config.condition.DateRangeType',
						ignoreTime: false,
						operations: {
							filter: [
								{path: 'category', contains: 'MONTH', exclude:true},
								{path: 'category', contains: 'QUARTER', exclude:true},
								{path: 'key', equals: 'TO', exclude:true}
							]
						}
					}"
					visibleInAdvancedArea="true">
				</smartFilterBar:ControlConfiguration>
			</smartFilterBar:controlConfiguration>
			</smartFilterBar:SmartFilterBar >
		</semantic:headerContent>
		<semantic:content>
			<smartTable:SmartTable id="smartTable" entitySet="zjblessons_base_Materials" smartFilterId="smartFilterBar" tableType="ResponsiveTable"
				editable="false" editTogglable="false" useExportToExcel="true" beforeExport="onBeforeExport" useVariantManagement="true"
				useTablePersonalisation="true" header="Materials" showRowCount="true" persistencyKey="pk_MaterialsST" enableAutoBinding="true" showFullScreenButton="true"
				beforeRebindTable="onBeforeRebindTable">
				<smartTable:customToolbar>
					<OverflowToolbar design="Transparent">
						<ToolbarSpacer/>
						<Button text="Refresh" press="onPressRefresh" icon="sap-icon://refresh"/>
						<Button text="Create" press="onPressCreate" icon="sap-icon://add"/>
						<Button text="Delete" press="onPressDelete" icon="sap-icon://delete"/>
						<Button text="Update" press="onPressUpdate"/>
						<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search="onSearch" width="auto" placeholder="search for SubGroupText"></SearchField>
						<SearchField placeholder="search for MaterialText" id="searchField2" tooltip="{i18n>worklistSearchTooltip}" search="onSearchMaterialText"
							width="auto"></SearchField>
					</OverflowToolbar>
				</smartTable:customToolbar>
				<Table id="table" width="auto" noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}"
					growing="true" growingScrollToLoad="true" updateFinished="onUpdateFinished" mode="SingleSelectLeft">
					<headerToolbar>
						<Toolbar>
							<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
							<!--<ToolbarSpacer/>-->
							<!--<Button text="Refresh" press="onPressRefresh" icon="sap-icon://refresh"/>-->
							<!--<Button text="Create" press="onPressCreate" icon="sap-icon://add"/>-->
							<!--<Button text="Delete" press="onPressDelete" icon="sap-icon://delete"/>-->
							<!--<Button text="Update" press="onPressUpdate"/>-->
							<!--<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search="onSearch" width="auto" placeholder="search for SubGroupText"></SearchField>-->
							<!--<SearchField placeholder="search for MaterialText" id="searchField2" tooltip="{i18n>worklistSearchTooltip}" search="onSearchMaterialText"-->
							<!--	width="auto"></SearchField>-->
						</Toolbar>
					</headerToolbar>
					<columns>
						<!--	<Column id="nameColumn1" hAlign="End">-->
						<!--		<Text text="{i18n>tableCreatedBy}" id="tableCreatedBy"/>-->
						<!--	</Column>-->
						<!--	<Column id="nameColumn">-->
						<!--		<Text text="{i18n>tableMaterialText}" id="MaterialText"/>-->
						<!--	</Column>-->
						<!--	<Column id="nameColumn2" hAlign="End">-->
						<!--		<Text text="{i18n>tableModifiedBy}" id="ModifiedBy"/>-->
						<!--	</Column>-->
						<!--	<Column id="nameColumn3" hAlign="End">-->
						<!--		<Text text="{i18n>tableGroupText}" id="GroupText"/>-->
						<!--	</Column>-->
						<!--	<Column id="nameColumn4" hAlign="End">-->
						<!--		<Text text="{i18n>tableSubGroupText}" id="SubGroupText"/>-->
						<!--	</Column>-->
						<!--	<Column id="nameColumn5" hAlign="End">-->
						<!--		<Text text="{i18n>tableModified}" id="Modified"/>-->
						<!--	</Column>-->
					</columns>
					<items>
						<ColumnListItem type="Navigation" press="onPress"></ColumnListItem>
					</items>
				</Table>
			</smartTable:SmartTable>
		</semantic:content>
		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>
	</semantic:SemanticPage>
</mvc:View>